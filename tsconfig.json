{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "newLine": "lf",
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}